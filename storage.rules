rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Base rule - deny by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // User profile photos
    match /users/{userId}/profile {
      // Allow users to read and write their own profile photos
      allow read: if true; // Anyone can view profile photos
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User header/cover photos
    match /users/{userId}/header {
      // Allow users to read and write their own header photos
      allow read: if true; // Anyone can view header photos
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Product images
    match /products/{productId}/{imageId} {
      // Anyone can read product images
      allow read: if true;
      
      // Only authenticated users with appropriate roles can upload product images
      allow write: if request.auth != null;
    }
  }
}
