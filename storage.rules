rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Base rule - deny by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // User profile photos
    match /users/{userId}/profile {
      // Allow users to read and write their own profile photos
      allow read: if true; // Anyone can view profile photos
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User header/cover photos
    match /users/{userId}/header {
      // Allow users to read and write their own header photos
      allow read: if true; // Anyone can view header photos
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Product images
    match /products/{userId}/{imageId} {
      // Anyone can read product images
      allow read: if true;
      
      // Only the user who owns the folder can write to it
      // This ensures each designer can only upload to their own folder
      allow write: if request.auth != null && request.auth.uid == userId && 
                      // Limit file size to 5MB and ensure it's an image
                      request.resource.size <= 5 * 1024 * 1024 &&
                      request.resource.contentType.matches('image/.*');
    }
  }
}
